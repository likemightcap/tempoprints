<section class="hero">
  <div class="hero-overlay"></div>
  <div class="hero-content">
    <img src="/assets/images/Tempo-Logo-Dark.png" alt="TempoPrints Logo" class="hero-logo">
    <h1>Community Mailer</h1>
    <p>Grow your local business with our targeted community mailer program!</p>
  </div>
</section>


<section class="contact-form-section">
  <div class="container">
    <form class="contact-form" id="mailer-form">
      <label for="name">Name*</label>
      <input type="text" id="name" name="name" required>

      <label for="company">Company Name</label>
      <input type="text" id="company" name="company">

      <label for="phone">Phone Number</label>
      <input type="tel" id="phone" name="phone">

      <label for="email">Email Address*</label>
      <input type="email" id="email" name="email" required>

      <button type="submit">Submit</button>
    </form>
    <div id="mailerStatus" class="form-status" style="display: none;"></div>
  </div>
</section>
